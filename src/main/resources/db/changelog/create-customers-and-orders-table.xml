<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="some ID_4" author="Semikin Vlad">

        <createTable tableName="CUSTOMERS">
            <column name = "id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(15)"/>
            <column name="surname" type="varchar(15)"/>
            <column name="age" type="integer"/>
            <column name="phone_number" type="integer"/>
        </createTable>

        <createTable tableName="ORDERS">
            <column name = "id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="date" type="date"/>
            <column name="customer_id" type="integer">
                <constraints foreignKeyName="customer_id" referencedTableName="CUSTOMERS" referencedColumnNames="id"/>
            </column>
            <column name="product_name" type="varchar(25)"/>
            <column name="amount" type="integer"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="ORDERS" baseColumnNames="id"
                                 constraintName="ORDERS_fk"
                                 referencedTableName="CUSTOMERS" referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>